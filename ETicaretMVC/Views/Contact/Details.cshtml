@using EntityLayer.Tables
@model List<Contact>
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayaout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">ÜrünListesi</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ad</th>
                            <th>Konu</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ContactID</td>
                                <td>@item.Name</td>
                                <td>@item.Subject</td>
                                @if (item.ReadUnderad == false)
                                {
                                    <td>Okunmadı</td>
                                    <td><a href="/Contact/Read/@item.ContactID" class="btn btn-fill btn-primary">Oku</a></td>
                                }
                                else
                                {
                                    <td>Okundu</td>
                                    <td><a href="/Contact/Read/@item.ContactID" class="btn btn-outline-success">Tekrar Oku</a></td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


