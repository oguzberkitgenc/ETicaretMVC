@using EntityLayer.Tables
@model List<Admin>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayaout.cshtml";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="title">Admin Bilgileri</h5>
            </div>
            <div class="card-body">
                <form>
                    @foreach (var item in Model)
                    {
                        <div class="row">
                            <div class="col-md-5 pr-md-1">
                                <div class="form-group">
                                    <label>Şirket Adı</label>
                                    <input type="text" class="form-control" placeholder="Şirket" value="@item.CompanyName" readonly>
                                </div>
                            </div>
                            <div class="col-md-3 px-md-1">
                                <div class="form-group">
                                    <label>Kullanıcı Adı</label>
                                    <input type="text" class="form-control" placeholder="Kullanıcı adı" value="@item.UserName" readonly>
                                </div>
                            </div>
                            <div class="col-md-4 pl-md-1">
                                <div class="form-group">
                                    <label>Şifre</label>
                                    <input type="password" class="form-control" placeholder="Şifre" value="@item.Password" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 pr-md-1">
                                <div class="form-group">
                                    <label>Ad</label>
                                    <input type="text" class="form-control" placeholder="Adı" value="@item.Name" readonly>  <!--value= değeri atayarak sql'den veriler getiriliebilri-->
                                </div>
                            </div>
                            <div class="col-md-6 pl-md-1">
                                <div class="form-group">
                                    <label>Soyad</label>
                                    <input type="text" class="form-control" placeholder="Soyadı" value="@item.SurName" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 pr-md-1">
                                <div class="form-group">
                                    <label>Telefon Numarası</label>
                                    <input type="tel" class="form-control" placeholder="Telefon Numarası" value="@item.Phone" readonly>  <!--value= değeri atayarak sql'den veriler getiriliebilri-->
                                </div>
                            </div>
                            <div class="col-md-6 pl-md-1">
                                <div class="form-group">
                                    <label>Mail Adresi</label>
                                    <input type="email" class="form-control" placeholder="Mail Adresi" value="@item.EMail" readonly>
                                </div>
                            </div>
                        </div>
                    }
                </form>
            </div>
            <div class="card-footer">
                <a href="/Admin/UpdateAdmin " class="btn btn-fill btn-primary">Düzenle</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card card-user">
            <div class="card-body">
                <p class="card-text">
                    <div class="author">
                        <div class="block block-one"></div>
                        <div class="block block-two"></div>
                        <div class="block block-three"></div>
                        <div class="block block-four"></div>
                        <a href="javascript:void(0)">
                            <img class="avatar" src="/Images/netflix-oyunlari-xbox-baskanindan-ovgu-aldi.jpg" alt="...">
                            <h5 class="title">Oğuz Berkit Genç</h5>
                        </a>
                        <p class="description">
                            Kurucu/Kurucu-Ortak
                        </p>
                    </div>
                </p>
                <div class="card-description">
                </div>
            </div>
            <div class="card-footer">
                <div class="button-container">
                    <button href="https://www.facebook.com/oberkitgenc" class="btn btn-icon btn-round btn-facebook">
                        <i class="fab fa-facebook"></i>
                    </button>
                    <button href="https://www.instagram.com/oguzberkitgenc" class="btn btn-icon btn-round btn-instagram">
                        <i class="fab fa-instagram"></i>
                    </button>
                    <button href="https://www.youtube.com/oguzberkitgenc" class="btn btn-icon btn-round btn-youtube">
                        <i class="fab fa-youtube"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>



