@using EntityLayer.Tables
@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayaout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">ÜrünListesi</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Logo</th>
                            <th>Ürün Adı</th>
                            <th>Satış Fiyatı</th>
                            <th>Stok</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProductID</td>
                                <td class="py-1">
                                    @if (@item.Name.IndexOf("iTunes", StringComparison.OrdinalIgnoreCase) >= 0)
                                    {
                                        <img src="/Images/itunes.png" alt="image" style="width:150px; height:auto" />
                                    }
                                    @if (@item.Name.IndexOf("Netflix", StringComparison.OrdinalIgnoreCase) >= 0)
                                    {
                                        <img src="/Images/netflix.png" alt="image" style="width:150px; height:auto" />
                                    }
                                    @if (@item.Name.IndexOf("Steam", StringComparison.OrdinalIgnoreCase) >= 0)
                                    {
                                        <img src="/Images/steam.png" alt="image" style="width:150px; height:auto" />
                                    }
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                <td>@item.Stock</td>
                                <td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Product/ProductUpdate/@item.ProductID" class="btn btn-outline-success">Düzenle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Product/InsertProduct" class="btn btn-fill btn-primary">Yeni Ürün Girişi</a>
            </div>
        </div>
    </div>
</div>
