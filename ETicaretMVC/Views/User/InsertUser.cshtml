@model EntityLayer.Tables.User
@{
    ViewData["Title"] = "InsertUser";
    Layout = "~/Views/Shared/_AdminLayaout.cshtml";
}

<form method="post">
    <h4>Yeni Kullanıcı</h4>

    <div class="row">
        <label>Adı</label>
        <input type="text" class="form-control" placeholder="İsim" asp-for="Name" />
    </div>
    <div class="row" style="margin-top:5px">
        <label>Soyadı</label>
        <input type="text" class="form-control" placeholder="Soyisim" asp-for="SurName" />
    </div>
    <div class="row" style="margin-top:5px">

        <label>E-Mail</label>
        <input type="text" class="form-control" placeholder="Mail" asp-for="Email" />
    </div>
    <div class="row" style="margin-top:5px">

        <label>Telefon</label>
        <input type="text" class="form-control" placeholder="Telefon Numarası" asp-for="Phone" />
    </div>
    <div class="row" style="margin-top:5px">
        <label>Şifre</label>
        <input type="text" class="form-control" placeholder="Şifre" asp-for="Password" />
    </div>
    <button type="submit" class="btn btn-outline-info">Kaydet</button>
</form>
