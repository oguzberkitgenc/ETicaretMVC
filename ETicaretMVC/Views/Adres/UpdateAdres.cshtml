@model EntityLayer.Tables.Adress
@{
    ViewData["Title"] = "UpdateAdres";
    Layout = "~/Views/Shared/_AdminLayaout.cshtml";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="title">Adres Bilgileri</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    @Html.HiddenFor(x=>x.ID)
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Adres</label>
                                <input type="text" class="form-control" placeholder="Adres" asp-for="Adres">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 pr-md-1">
                            <div class="form-group">
                                <label>Şehir</label>
                                <input type="text" class="form-control" placeholder="Şehir" asp-for="City">
                            </div>
                        </div>
                        <div class="col-md-4 px-md-1">
                            <div class="form-group">
                                <label>Ülke</label>
                                <input type="text" class="form-control" placeholder="Ülke" asp-for="Country">
                            </div>
                        </div>
                        <div class="col-md-4 pl-md-1">
                            <div class="form-group">
                                <label>Posta Kodu</label>
                                <input type="number" class="form-control" placeholder="Posta Kodu" asp-for="PostaCode">
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-outline-info">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card card-user">
            <div class="card-body">
                <p class="card-text">
                    <div class="author">
                        <div class="block block-one"></div>
                        <div class="block block-two"></div>
                        <div class="block block-three"></div>
                        <div class="block block-four"></div>
                        <a href="javascript:void(0)">
                            <img class="avatar" src="/Images/netflix-oyunlari-xbox-baskanindan-ovgu-aldi.jpg" alt="...">
                            <h5 class="title">Oğuz Berkit Genç</h5>
                        </a>
                        <p class="description">
                            Kurucu/Kurucu-Ortak
                        </p>
                    </div>
                </p>
                <div class="card-description">
                </div>
            </div>
            <div class="card-footer">
                <div class="button-container">
                    <button href="https://www.facebook.com/oberkitgenc" class="btn btn-icon btn-round btn-facebook">
                        <i class="fab fa-facebook"></i>
                    </button>
                    <button href="https://www.instagram.com/oguzberkitgenc" class="btn btn-icon btn-round btn-instagram">
                        <i class="fab fa-instagram"></i>
                    </button>
                    <button href="https://www.youtube.com/oguzberkitgenc" class="btn btn-icon btn-round btn-youtube">
                        <i class="fab fa-youtube"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
